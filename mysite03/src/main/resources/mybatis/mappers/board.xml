<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<select id="totalCount" resultType="integer">
		<![CDATA[
			select count(*) from board
		]]>
	</select>
	
	
	<select id="totalPage" resultType="integer">
		<![CDATA[
			select ceil(count(*)/5) from board
		]]>
	</select>
	<select id="findThisPage" parameterType="map" resultType="boardvo" >
		<![CDATA[
		select b.no, b.title, b.hit, u.name,
					 b.user_no, date_format(reg_date, '%Y/%m/%d %H:%i:%s') as regDate,
					 b.order_no, b.depth
			from user u, board b
			where b.user_no=u.no
			order by group_no DESC, order_no asc
			limit #{startPage}, #{onePageCount}
		]]>
	</select>
	<select id="findByViewInfo" parameterType="long" resultType="boardvo" >
		<![CDATA[
		select no, title, contents, hit, user_no
			from board
			where no=#{value}
		]]>
	</select>
	
	<select id="maxGroupNo" resultType="integer" >
		<![CDATA[
			select max(group_no) from board
		]]>
	</select>
	
	
	<update id="upHits" parameterType="long" >
		<![CDATA[
			update board
				set hit=hit+1
				where no=#{no}
		]]>
	</update>
	
	
	
	<delete id="delete" parameterType="integer">
		<![CDATA[
			delete
				from board
				where group_no=#{value};
		]]>
	</delete>
	
	
	<insert id="insert">
		<![CDATA[
			insert
				into board
				values (null, #{title}, #{contents}, now(), 0, #{groupNo}, #{orderNo}, #{depth}, #{userNo})
		]]>
	</insert>
	
</mapper>
